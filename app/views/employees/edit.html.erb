<h1>Edit an Employee</h1>
<%= form_for @employee do |f| %>
  <%= f.label :first_name %>
  <%= f.text_field :first_name %>

  <%= f.label :last_name %>
  <%= f.text_field :last_name %>

  <%= f.label :alias %>
  <%= f.text_field :alias %>

  <%= f.label :title %>
  <%= f.text_field :title %>

  <%= f.label :office %>
  <%= f.text_field :office %>

  <%= f.label 'Select Dog' %>
  <%= f.collection_select(:dog_id, Dog.all, :id, :name) %><br/>

  <%= f.submit "Edit Employee" %>
  <% end %>

  <%= button_to('Delete Employee', @employee, method: :delete) %>